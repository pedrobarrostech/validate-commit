{
  "name": "validate-commit",
  "version": "3.0.1",
  "description": "Validate commit messages according to various presets",
  "main": "dist/index.js",
  "author": {
    "name": "Will Soto",
    "email": "will.soto9+github@gmail.com",
    "url": "https://github.com/paradox41"
  },
  "contributors": [
    {
      "name": "Leo Di Donato",
      "email": "leodidonato@gmail.com",
      "url": "https://github.com/leodido"
    }
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/paradox41/validate-commit/issues"
  },
  "homepage": "https://github.com/paradox41/validate-commit#readme",
  "files": [
    "bin/",
    "dist/",
    "typings/"
  ],
  "typings": "./typings/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paradox41/validate-commit.git"
  },
  "keywords": [
    "node",
    "git",
    "angular",
    "atom",
    "ember",
    "eslint",
    "jshint",
    "jquery",
    "hooks",
    "commit",
    "conventional commit",
    "commit convention"
  ],
  "bin": {
    "validate-commit-msg": "./bin/index.js"
  },
  "git": {
    "scripts": {
      "commit-msg": "./bin/index.js $1"
    }
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "scripts": {
    "clean": "rimraf dist typings",
    "lint": "tslint src/**/*.ts test/**/*.ts",
    "watch": "tsc --watch",
    "pretest": "npm run build",
    "test": "mocha --compilers js:babel-core/register",
    "test-watch": "npm test -- --watch",
    "prebuild": "npm run clean",
    "build": "tsc",
    "coverage": "babel-node ./node_modules/.bin/isparta cover _mocha -- -R spec",
    "coveralls": "npm run coverage -s && coveralls < coverage/lcov.info",
    "postcoveralls": "rimraf ./coverage",
    "prepublish": "npm run build",
    "predocs": "rimraf docs/",
    "docs": "typedoc --out docs/ src/",
    "postdocs": "./gh-pages.js",
    "prerelease": "npm test",
    "release": "standard-version --sign && git push --follow-tags origin master"
  },
  "dependencies": {
    "chalk": "^1.1.3",
    "is-file": "^1.0.0",
    "yargs": "^6.6.0"
  },
  "devDependencies": {
    "@types/chai": "^3.4.34",
    "@types/chalk": "^0.4.31",
    "@types/mocha": "^2.2.38",
    "@types/node": "^7.0.4",
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-preset-es2015": "^6.22.0",
    "chai": "^3.5.0",
    "codelyzer": "2.0.0-beta.4",
    "coveralls": "^2.11.15",
    "gh-pages": "^0.12.0",
    "git-scripts": "^0.2.1",
    "isparta": "^4.0.0",
    "mocha": "^3.2.0",
    "mocha-sinon": "^1.1.6",
    "rimraf": "^2.5.4",
    "sinon": "^1.17.7",
    "standard-version": "^4.0.0",
    "trash-cli": "^1.4.0",
    "ts-node": "^2.0.0",
    "tslint": "^4.4.2",
    "typedoc": "^0.5.5",
    "typescript": "^2.1.5"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
